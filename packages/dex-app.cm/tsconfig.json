{
  "compilerOptions": {
    "strict": true,
    "target": "ESNEXT",
    "module": "ESNEXT",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts", "vitest.config.ts"]
}
